{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["./app/*"],
      "@/features/*": ["./features/*"],
      "@/ui/*": ["./ui/*"],
      "@/services/*": ["./services/*"],
      "@/core/*": ["./core/*"],
      "@/platform/*": ["./platform/*"],
      "@/assets/*": ["./assets/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
