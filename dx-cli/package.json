{
  "name": "@chessmate/dx-cli",
  "version": "1.0.0",
  "description": "Developer experience CLI for the chessmate monorepo",
  "main": "dist/index.js",
  "bin": {
    "dx": "bin/dx",
    "monocto": "bin/monocto",
    "mnc": "bin/mnc"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "prepare-dist": "npm run build && chmod +x bin/dx bin/monocto bin/mnc"
  },
  "keywords": [
    "cli",
    "developer-experience",
    "dx",
    "monorepo",
    "orchestration"
  ],
  "author": "ChessMate Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
